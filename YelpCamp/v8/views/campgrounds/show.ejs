<% include ../partial/header %>

<div class="container comments">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image %>">
                <div class="caption-full">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4><a href=""><%= campground.name %></a></h4>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted by <%= campground.author.username %></em>
                    </p>
                    <!-- form is not inline element, need to style it by CSS through id='delete-form' -->
                    <% if ((typeof currentUser !== "undefined") && (campground.author.username === currentUser.username)) {%>
                        <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit Post</a>
                        <form id="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete Post</button>
                        </form>                    
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">New Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %> </strong>
                        <span class="float-right">10 days ago</span>
                        <p><%= comment.text %></p>
                        <% if ((typeof currentUser !== "undefined") && comment.author.username === currentUser.username) {%>
                            <a class="btn btn-primary" href="/campgrounds/<%= campground._id%>/comments/<%= comment._id %>/edit">Edit Comment</a>
                            <form id="delete" action="/campgrounds/<%= campground._id%>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-secondary">Delete Comment</button>
                            </form>                    
                        <% } %>
                    </div>
                </div>
                    <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partial/footer %>