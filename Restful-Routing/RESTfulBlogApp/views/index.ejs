<% include ./partials/header %>

<div class="ui main container">
    <% blogs.forEach(function(blog){  %>
        <div class="ui segment">
            <div class="ui huge header">
                    <h2><%= blog.title %></h2>
            </div>            
            <div class="item">
                    <img class="ui centered rounded image" src="<%= blog.image %>" width="500px" height="500px">
                    <div class="content">
                        <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%= blog.body.substring(0, 100) %> ...</p> 
                    </div>
                    <a href="/blogs/<%= blog._id %>" class="" title="More info about <%= blog.title %>">Read More</a>
            </div>            
            <!-- <h2><%= blog.title %></h2>
            <img src="<%= blog.image %>" width="300px" height="300px">
            <span><%= blog.created %></span>
            <p><%= blog.body.substring(0, 100) %> ...</p> -->
        </div>
    
    <% }) %>
</div>

<% include ./partials/footer %>