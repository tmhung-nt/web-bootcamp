<% include ../partial/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To Yelpcamp!</h1>
            <p>View our- hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn bnt-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-6 col-sm-3">
            <div class="thumbnail">
                <img src="<%= campground.image %>"  height="300" width="500">
                <div class="caption">
                    <h4>
                        <%= campground.name %>
                    </h4>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary" title="More info about <%= campground.name %>">More Info</a>
                    </p>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<% include ../partial/footer %>